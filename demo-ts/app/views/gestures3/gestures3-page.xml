<Page 
    xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" navigatingTo="navigatingTo" class="page" actionBarHidden="false">
    <!--
    The ActionBar is the NativeScript common abstraction over the Android ActionBar and iOS NavigationBar.
    http://docs.nativescript.org/ui/action-bar
    -->
    <Page.actionBar>
        <ActionBar title="Gestures(Pan)" icon="" class="action-bar"></ActionBar>
    </Page.actionBar>
    <StackLayout width="100%" height="100%" orientation="vertical" backgroundColor="white">
        <Label text='' id="tipLabel" class="h2 text-left" style="font-size:15px;" width="100%" height="120" textWrap="true" backgroundColor="skyblue" />
        <!-- Pan -->
        <Label text='Pan' class="h3 text-center" textWrap="true"/>
        <AbsoluteLayout id="gesturelayout" horizontalAlignment="center" width="100%" height="400" backgroundColor="pink"></AbsoluteLayout>
    </StackLayout>
</Page>